{% block stylesheets %}
    {{ parent() }}
    <style>
        #virus-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1000;
        }

        .virus-popup {
            position: absolute;
            background: linear-gradient(135deg, #ff0000 0%, #ff6600 100%);
            border: 4px solid #ffff00;
            border-radius: 0;
            padding: 15px;
            min-width: 200px;
            max-width: 300px;
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.8), 0 0 40px rgba(255, 102, 0, 0.6);
            pointer-events: all;
            cursor: pointer;
            animation: shake 0.5s infinite, blink-border 1s infinite;
            font-family: 'Courier New', monospace;
            color: #fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        .virus-popup:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(255, 0, 0, 1), 0 0 60px rgba(255, 102, 0, 0.8);
        }

        .virus-popup-header {
            background: #000;
            color: #ff0000;
            padding: 5px 10px;
            margin: -15px -15px 10px -15px;
            font-weight: bold;
            border-bottom: 2px solid #ffff00;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .virus-popup-close {
            background: #ff0000;
            color: #fff;
            border: 2px solid #fff;
            padding: 2px 8px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
        }

        .virus-popup-close:hover {
            background: #fff;
            color: #ff0000;
        }

        .virus-popup-body {
            font-size: 14px;
            line-height: 1.4;
        }

        @keyframes shake {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            10% { transform: translate(-5px, -5px) rotate(-1deg); }
            20% { transform: translate(5px, 5px) rotate(1deg); }
            30% { transform: translate(-5px, 5px) rotate(-1deg); }
            40% { transform: translate(5px, -5px) rotate(1deg); }
            50% { transform: translate(-5px, -5px) rotate(-1deg); }
            60% { transform: translate(5px, 5px) rotate(1deg); }
            70% { transform: translate(-5px, 5px) rotate(-1deg); }
            80% { transform: translate(5px, -5px) rotate(1deg); }
            90% { transform: translate(-5px, -5px) rotate(-1deg); }
        }

        @keyframes blink-border {
            0%, 100% { border-color: #ffff00; }
            50% { border-color: #ff0000; }
        }

        @keyframes fadeOut {
            to {
                opacity: 0;
                transform: scale(0) rotate(360deg);
            }
        }

        .virus-popup.closing {
            animation: fadeOut 0.5s forwards;
        }
    </style>
{% endblock %}

